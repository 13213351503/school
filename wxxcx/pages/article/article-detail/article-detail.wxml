<view class='container article-detail'>
  <view class='focus'>
    <image class='focus-bg' src='{{mainImage}}'></image>
    <image 
      catchtap="tapMusic"
      class='focus-music' 
      src="{{isLoading ? '/images/icon/music-stop.png' : '/images/icon/music-start.png'}}"
    >
    </image>
  </view>
  <view class='head'>
    <image class='avatar' src='{{avatar}}'></image>
    <text class='author'>{{author}}</text>
    <text class='text'>发表于</text>
    <text class='time'>{{time}}</text>
  </view>
  <text class='title'>{{title}}</text>
  <view class='operation'>
    <image
        catchtap="tapCollection"
        wx:if="{{isCollected}}"
        class='operation-collection'
        src='/images/icon/collection.png'>
    </image>
    <image
        catchtap="tapCollection"
        wx:else
        class='operation-collection'
        src='/images/icon/collection-none.png'>
    </image>
    <image 
        catchtap="tapaction"
        class='operation-share' 
        src='/images/icon/share.png'
    >
    </image>
    <view class='operation-line'></view>    
  </view>
  <text class='content'>{{desc}}</text>
</view>