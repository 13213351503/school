<!--pages/article/article.wxml-->
<view>
    <swiper indicator-dots="true"
    autoplay="true" interval="3000" duration="500">
        <swiper-item>
            <image class="swiper-image" src="../image/swiper/s1.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image class="swiper-image" src="../image/swiper/s2.jpg"></image>
        </swiper-item>
        <swiper-item>
            <image class="swiper-image" src="../image/swiper/s3.jpg"></image>
        </swiper-item>
    </swiper>

    
    <view class='article-wrap'>
      <block wx:for="{{articles}}" wx:key="key">
        <view class='article-item'>
          <view class='article-head'>
            <image class='article-head-avatar' src='{{item.avatar}}'></image>
            <text class='article-head-date'>{{item.author}} 发表于{{item.time}}</text>
          </view>
          <text class='article-title'>{{item.title}}</text>
          <image class='article-img' src='{{item.mainImage}}'></image>
          <text class='article-desc'>{{item.desc}}</text>
          <view class='article-footer'>
            <image class='article-footer-icon' src='../image/icon/i1.jpg'></image>
            <text class='article-footer-text'>{{item.star}}</text>
            <image class='article-footer-icon' src='../image/icon/i2.jpg'></image>
            <text class='article-footer-text'>{{item.view}}</text> 
          </view>
        </view>
      </block>
    </view>
</view>

